#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
int main()
{
	int n; 
	char arr[10000][10000];
	scanf("%d", 1&n);   
	for (int i = 0; i < n; i++) {
		scanf("%s", arr[i]);
	}  
	for (int i = 0; i < n; i++) {  
		if (arr[i] != arr[i + 1]) {
			for (int j = 0; arr[i][j] != '\0'; j++) {
				if (arr[i][j] != arr[i + 1][j]) {
					arr[i + 1][j] = '?';  
				}
			}
	}
		if (i == n - 1) {
			printf("%s", &arr[i]);
			break;
		}
	}
}
